########################################
# Frontend (Vite)
########################################
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

########################################
# Server/CLI (local scripts, seed)
########################################
# Same as VITE_SUPABASE_URL (used by seed script and Edge Functions)
SUPABASE_URL=
# Service Role key (never expose in frontend). Required for seed and server-side functions
SUPABASE_SERVICE_ROLE_KEY=

########################################
# Stripe (configure in Supabase Functions env)
########################################
# Secret API key (server-side only)
STRIPE_SECRET_KEY=
# Webhook signing secret
STRIPE_WEBHOOK_SECRET=
# Subscription price id (e.g., price_123)
STRIPE_PRICE_ID=
# Public site URL for redirects (e.g., https://app.example.com)
SITE_URL=

# Optional: provide anon key for Edge Functions to create an RLS client bound to caller
SUPABASE_ANON_KEY=
